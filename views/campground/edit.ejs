
<% include ../partials/header %>
<div class="container">
    <!--<div class="row">-->
        <h1 style="text-align: center;font-family:Tahoma;font-size:30px">Edit  <span style="font-family:'notable',sans-serif;color:chocolate;font-size:25px"><%= campground.name %></span></h1>
        <div style="width: 30%; margin:30px auto;">
            <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
