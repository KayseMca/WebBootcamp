                    <input type="text" class="form-control" name="campground[gobol]" value="<%= campground.gobol %>" >
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name ='campground[image]' value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name ='campground[faalo]' value="<%= campground.faalo %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Laabo</a>
        </div>
    <!--</div>-->
</div>
