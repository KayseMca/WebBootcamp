<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Bogga Dalxiis</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li> 
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img src="<%= campground.image %>" class="img-responsive">
                <div class="caption-full">
                    <h4 class="float-right"  style="font-family:'UbuntuCondensed';font-style:italic "><%= campground.gobol %></h4>
                    <h4 style="font-family:'UbuntuCondensed' "><a href=""><%= campground.name %></a></h4>
                    <p class="text-justify"><p><%= campground.faalo %></p>
                    <p><i>soo gudbiye:</i> <strong><%= campground.author.username %></strong></p>

                    <% if(currentUser && campground.author.id.equals(currentUser._id)) {%>
                        <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning btn-xs">Edit</a>
                        <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button  class="btn btn-danger btn-m">Delete</button>
                        </form>
                    <%}%>
                </div>
            </div>
            <div class="card card-body">
                <div class="text-right">
                        <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Faallo Ka bixi</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="float-right">10 days ago</span>
                                <p> <%= comment.text %></p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id)) {%>
                                <a href="/campgrounds/<%= campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-warning btn-xs">Edit</a>
                                <form id="delete-form" action="/campgrounds/<%= campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-danger btn-m" value="Delete" >
                                </form>

                            <%}})%>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
<% include ../partials/footer %>